<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yond.blog.mapper.SiteConfigMapper">

    <resultMap id="BaseResultMap" type="com.yond.blog.entity.SiteConfigDO">

    </resultMap>

    <sql id="ALL_FILED">
        id
        as id,
        `key` as `key`,
        `name` as `name`,
        `value` as `value`,
        `type` as `type`
    </sql>

    <select id="listAll" resultMap="BaseResultMap">
        select
        <include refid="ALL_FILED"/>
        from site_config
    </select>

    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id">
        insert into site_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="key != null">`key`,</if>
            <if test="name != null">`name`,</if>
            <if test="value != null">`value`,</if>
            <if test="type != null">`type`,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id,jdbcType=NUMERIC},</if>
            <if test="key != null">#{key,jdbcType=VARCHAR},</if>
            <if test="name != null">#{name,jdbcType=VARCHAR},</if>
            <if test="value != null">#{value,jdbcType=VARCHAR},</if>
            <if test="type != null">#{type,jdbcType=NUMERIC},</if>
        </trim>
    </insert>


    <update id="updateSelective">
        update site_config
        <set>
            <if test="name != null">`name`=#{name,jdbcType=VARCHAR},</if>
            <if test="value != null">`value`=#{value,jdbcType=VARCHAR},</if>
            <if test="type != null">`type`=#{type,jdbcType=NUMERIC},</if>
        </set>
        where `key` = #{key,jdbcType=VARCHAR}
    </update>


</mapper>
