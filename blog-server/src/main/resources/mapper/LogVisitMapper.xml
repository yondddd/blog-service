<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yond.blog.mapper.LogVisitMapper">

    <resultMap id="log" type="com.yond.blog.entity.LogVisitDO">
        <id property="id" column="id"/>
        <result property="uuid" column="uuid"/>
        <result property="uri" column="uri"/>
        <result property="method" column="method"/>
        <result property="param" column="param"/>
        <result property="behavior" column="behavior"/>
        <result property="content" column="content"/>
        <result property="remark" column="remark"/>
        <result property="ip" column="ip"/>
        <result property="ipSource" column="ip_source"/>
        <result property="os" column="os"/>
        <result property="browser" column="browser"/>
        <result property="times" column="times"/>
        <result property="createTime" column="create_time"/>
        <result property="userAgent" column="user_agent"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        , uuid, uri, `method`, param, behavior, content, remark, ip, ip_source, os, browser, times, create_time
    </sql>

    <!--查询日志-->
    <select id="getVisitLogListByUUIDAndDate" resultMap="log">
        <bind name="uuidPattern" value="'%' + uuid + '%'"/>
        select
        <include refid="Base_Column_List"/>
        from log_visit
        <where>
            <if test="uuid!=null and uuid!=''">
                uuid like #{uuidPattern}
            </if>
            <if test="startDate!=null and startDate!='' and endDate!=null and endDate!=''">
                and create_time between #{startDate} and #{endDate}
            </if>
        </where>
    </select>

    <resultMap id="logDTO" type="com.yond.blog.web.blog.view.dto.VisitLogUuidTime">
        <result property="uuid" column="uuid"/>
        <result property="time" column="create_time"/>
    </resultMap>

    <!--查询昨天的所有访问日志-->
    <select id="getUUIDAndCreateTimeByYesterday" resultMap="logDTO">
        select uuid, create_time
        from log_visit
        where date (create_time)=date_sub(curdate(), interval 1 day)
        order by create_time desc
    </select>

    <!--添加日志-->
    <insert id="saveVisitLog" parameterType="com.yond.blog.entity.LogVisitDO" useGeneratedKeys="true" keyProperty="id">
        insert into log_visit (uuid, uri, method, param, behavior, content, remark, ip, ip_source, os, browser, times,
                               create_time, user_agent)
        values (#{uuid}, #{uri}, #{method}, #{param}, #{behavior}, #{content}, #{remark}, #{ip}, #{ipSource}, #{os},
                #{browser}, #{times}, #{createTime}, #{userAgent})
    </insert>

    <!--删除日志-->
    <delete id="deleteVisitLogById">
        delete
        from log_visit
        where id = #{id}
    </delete>

    <!--查询今日访问量-->
    <select id="countVisitLogByToday" resultType="java.lang.Integer">
        select count(*)
        from log_visit
        where date (create_time)=curdate()
    </select>

</mapper>