<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yond.blog.mapper.SiteSettingMapper">


    <sql id="ALL_FILED">
        id as id,
        name_en as nameEn,
        name_zh as nameZh,
        value as value,
        type as type
    </sql>

    <!--查询站点设置-->
    <select id="listAll" resultType="com.yond.blog.entity.SiteSettingDO">
        select <include refid="ALL_FILED"/>  from site_setting
    </select>

    <!--添加-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into site_setting (name_en, name_zh, value, type) values (#{nameEn}, #{nameZh}, #{value}, #{type})
    </insert>

    <!--更新-->
    <update id="update">
        update site_setting set value=#{value} where id=#{id}
    </update>

    <!--删除-->
    <delete id="deleteById">
        delete from site_setting where id=#{id}
    </delete>

</mapper>
