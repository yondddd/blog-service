<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yond.blog.mapper.BlogMapper">

    <resultMap id="BaseResultMap" type="com.yond.blog.entity.BlogDO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="firstPicture" column="first_picture"/>
        <result property="content" column="content"/>
        <result property="description" column="description"/>
        <result property="published" column="is_published"/>
        <result property="recommend" column="is_recommend"/>
        <result property="appreciation" column="is_appreciation"/>
        <result property="commentEnabled" column="is_comment_enabled"/>
        <result property="top" column="is_top"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="views" column="views"/>
        <result property="words" column="words"/>
        <result property="readTime" column="read_time"/>
        <result property="password" column="password"/>
        <result property="categoryId" column="category_id"/>
        <result property="userId" column="user_id"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`, `title`, `first_picture`, `content`, `description`, `is_published`, `is_recommend`, `is_appreciation`,
        `is_comment_enabled`, `create_time`, `update_time`, `views`, `words`, `read_time`, `category_id`, `is_top`, `password`, `user_id`
            ,`status`
    </sql>

    <resultMap id="searchBlog" type="com.yond.blog.web.view.vo.SearchBlog">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
    </resultMap>

    <resultMap id="blogIdAndTitle" type="com.yond.blog.web.view.vo.BlogIdAndTitle">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
    </resultMap>

    <resultMap id="newBlog" type="com.yond.blog.web.view.vo.NewBlog">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="password" column="password"/>
    </resultMap>



    <resultMap id="blogInfo" type="com.yond.blog.web.view.vo.BlogInfo">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
        <result property="views" column="views"/>
        <result property="words" column="words"/>
        <result property="readTime" column="read_time"/>
        <result property="top" column="is_top"/>
        <result property="password" column="password"/>
        <association property="category" javaType="com.yond.blog.entity.CategoryDO">
            <result property="name" column="category_name"/>
        </association>
    </resultMap>

    <resultMap id="randomBlog" type="com.yond.blog.web.view.vo.RandomBlog">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="password" column="password"/>
        <result property="createTime" column="create_time"/>
        <result property="firstPicture" column="first_picture"/>
    </resultMap>

    <!--查询随机的公开且推荐文章-->
    <select id="getRandomBlogListByLimitNumAndIsPublishedAndIsRecommend" resultMap="randomBlog">
        select id, title, password, create_time, first_picture
        from blog
        where is_published=true and is_recommend=true
        order by rand() limit #{limitNum}
    </select>

    <!--查询所有文章的浏览量-->
    <select id="getBlogViewsList" resultType="com.yond.blog.web.view.dto.BlogView">
        select id, views from blog
    </select>

    <!--更新博客阅读次数-->
    <update id="updateViews">
        update blog set views=#{views} where id=#{blogId}
    </update>

    <resultMap id="blogDetail" type="com.yond.blog.web.view.vo.BlogDetail">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="appreciation" column="is_appreciation"/>
        <result property="commentEnabled" column="is_comment_enabled"/>
        <result property="top" column="is_top"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="views" column="views"/>
        <result property="words" column="words"/>
        <result property="readTime" column="read_time"/>
        <result property="password" column="password"/>
        <association property="category" javaType="com.yond.blog.entity.CategoryDO">
            <result property="name" column="category_name"/>
        </association>
        <collection property="tags" javaType="com.yond.blog.entity.TagDO">
            <result property="name" column="tag_name"/>
            <result property="color" column="color"/>
        </collection>
    </resultMap>

    <!--按id查询公开博客-->
    <select id="getBlogByIdAndIsPublished" resultMap="blogDetail">
        select b.id, b.title, b.content, b.is_appreciation, b.is_comment_enabled, b.is_top,
        b.create_time, b.update_time, b.views, b.words, b.read_time, b.password,
        c.category_name,
        t.tag_name as tag_name, t.color
        from (((blog as b left join category as c on b.category_id=c.id) left join blog_tag as bt on b.id=bt.blog_id) left join tag as t on bt.tag_id=t.id)
        where b.id=#{id} and b.is_published=true
    </select>

    <!--按标签id查询博客数量-->
    <select id="countBlogByTagId" resultType="java.lang.Integer">
        select count(*) from blog_tag where tag_id=#{tagId}
    </select>

    <resultMap id="categoryBlogCount" type="com.yond.blog.web.view.vo.CategoryBlogCount">
        <id property="id" column="category_id"/>
        <result property="value" column="blog_count"/>
    </resultMap>

    <select id="listAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from blog
    </select>

    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id">
        insert into blog
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="title != null">title,</if>
            <if test="firstPicture != null">first_picture,</if>
            <if test="content != null">content,</if>
            <if test="description != null">description,</if>
            <if test="published != null">is_published,</if>
            <if test="recommend != null">is_recommend,</if>
            <if test="appreciation != null">is_appreciation,</if>
            <if test="commentEnabled != null">is_comment_enabled,</if>
            <if test="top != null">is_top,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="views != null">views,</if>
            <if test="words != null">words,</if>
            <if test="readTime != null">read_time,</if>
            <if test="password != null">password,</if>
            <if test="status != null">status,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id,jdbcType=NUMERIC},</if>
            <if test="categoryId != null">#{categoryId,jdbcType=NUMERIC},</if>
            <if test="userId != null">#{userId,jdbcType=NUMERIC},</if>
            <if test="title != null">#{title,jdbcType=VARCHAR},</if>
            <if test="firstPicture != null">#{firstPicture,jdbcType=VARCHAR},</if>
            <if test="content != null">#{content,jdbcType=VARCHAR},</if>
            <if test="description != null">#{description,jdbcType=VARCHAR},</if>
            <if test="published != null">#{published,jdbcType=BOOLEAN},</if>
            <if test="recommend != null">#{recommend,jdbcType=BOOLEAN},</if>
            <if test="appreciation != null">#{appreciation,jdbcType=BOOLEAN},</if>
            <if test="commentEnabled != null">#{commentEnabled,jdbcType=BOOLEAN},</if>
            <if test="top != null">#{top,jdbcType=BOOLEAN},</if>
            <if test="createTime != null">#{createTime,jdbcType=TIMESTAMP},</if>
            <if test="updateTime != null">#{updateTime,jdbcType=TIMESTAMP},</if>
            <if test="views != null">#{views,jdbcType=NUMERIC},</if>
            <if test="words != null">#{words,jdbcType=NUMERIC},</if>
            <if test="readTime != null">#{readTime,jdbcType=NUMERIC},</if>
            <if test="password != null">#{password,jdbcType=VARCHAR},</if>
            <if test="status != null">#{status,jdbcType=NUMERIC},</if>
        </trim>
    </insert>


    <select id="listByStatus" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from blog
        where
        status = #{status,jdbcType=NUMERIC}
    </select>
    <update id="updateSelective">
        update blog
        <set>
            <if test="categoryId != null">category_id=#{categoryId,jdbcType=NUMERIC},</if>
            <if test="userId != null">user_id=#{userId,jdbcType=NUMERIC},</if>
            <if test="title != null">title=#{title,jdbcType=VARCHAR},</if>
            <if test="firstPicture != null">first_picture=#{firstPicture,jdbcType=VARCHAR},</if>
            <if test="content != null">content=#{content,jdbcType=VARCHAR},</if>
            <if test="description != null">description=#{description,jdbcType=VARCHAR},</if>
            <if test="published != null">is_published=#{published,jdbcType=BOOLEAN},</if>
            <if test="recommend != null">is_recommend=#{recommend,jdbcType=BOOLEAN},</if>
            <if test="appreciation != null">is_appreciation=#{appreciation,jdbcType=BOOLEAN},</if>
            <if test="commentEnabled != null">is_comment_enabled=#{commentEnabled,jdbcType=BOOLEAN},</if>
            <if test="top != null">is_top=#{top,jdbcType=BOOLEAN},</if>
            <if test="createTime != null">create_time=#{createTime,jdbcType=TIMESTAMP},</if>
            <if test="updateTime != null">update_time=#{updateTime,jdbcType=TIMESTAMP},</if>
            <if test="views != null">views=#{views,jdbcType=NUMERIC},</if>
            <if test="words != null">words=#{words,jdbcType=NUMERIC},</if>
            <if test="readTime != null">read_time=#{readTime,jdbcType=NUMERIC},</if>
            <if test="password != null">password=#{password,jdbcType=VARCHAR},</if>
            <if test="status != null">status=#{status,jdbcType=NUMERIC},</if>
        </set>
        where id = #{id,jdbcType=NUMERIC}
    </update>


</mapper>
